pipeline {
    agent any

    tools {
        maven 'Maven3'
    }

    environment {
        TOMCAT_HOST = '192.168.29.57'
        TOMCAT_PORT = '8081'
    }

    stages {
        
        stage('Pre-Build Info') {
            steps {
                echo "Build number is: ${env.BUILD_NUMBER}"
            }
        }
        
        stage('Checkout Code') {
            steps {
                git branch: 'master', url: 'https://github.com/praveenkuluru/anshulc55_Jenkins_Upgradev3.git'
            }
        }

        stage('Build Package') {
            steps {
                dir('java-tomcat-sample') {
                    bat 'mvn clean package'
                }
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                dir('java-tomcat-sample') {
                    // üëá Securely use credentials here
                    withCredentials([usernamePassword(credentialsId: 'd92e0a05-4f11-4172-b910-164fe6ed221d', usernameVariable: 'TOMCAT_USER', passwordVariable: 'TOMCAT_PASS')]) {
                        // Remove old app (optional)
                        bat '''
                            curl -u %TOMCAT_USER%:%TOMCAT_PASS% ^
                            "http://%TOMCAT_HOST%:%TOMCAT_PORT%/manager/text/undeploy?path=/sample"
                        '''

                        // Deploy new WAR
                        bat '''
                            curl -u %TOMCAT_USER%:%TOMCAT_PASS% ^
                            --upload-file target/java-tomcat-maven-example.war ^
                            "http://%TOMCAT_HOST%:%TOMCAT_PORT%/manager/text/deploy?path=/sample&update=true"
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'java-tomcat-sample/target/*.war', fingerprint: true
            echo '‚úÖ Build and Deployment Successful!'
        }
        failure {
            echo '‚ùå Build or Deployment Failed ‚Äî Check Console Output'
        }
    }
}
